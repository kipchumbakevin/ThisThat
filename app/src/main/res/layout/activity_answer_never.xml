<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".AnswerNever">

    <LinearLayout
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="52dp"
        android:id="@+id/mainView"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/optiona"
            android:orientation="vertical"
            android:background="@color/optiona"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="HAVE"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:background="@color/optionb"
            android:id="@+id/optionb"
            android:orientation="vertical"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/b"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="NEVER"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="3dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:background="@drawable/text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="OR"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/lin"
        android:paddingStart="3dp"
        android:layout_margin="20dp"
        android:id="@+id/percentage"
        android:paddingEnd="3dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/optiona_percent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="100%"
            android:textStyle="bold"
            android:textColor="@color/optiona"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/optionb_percent"
            android:text="100%"
            android:gravity="bottom|end"
            android:layout_gravity="bottom"
            android:textStyle="bold"
            android:textColor="@color/optionb"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="USED A FAKE ID"
        android:layout_marginStart="5dp"
        android:id="@+id/nevertitle"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:background="@drawable/tttt"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:layout_height="wrap_content"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="60dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="60dp"/>
    <Button
        android:id="@+id/reload"
        android:layout_width="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="reload"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:padding="5dp" />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/next"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_forward"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/previous"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back"
        android:backgroundTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>