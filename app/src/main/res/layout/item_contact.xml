<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hbb20.CountryCodePicker
        android:id="@+id/ccp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:ccpDialog_allowSearch="true"
        app:ccpDialog_fastScroller_bubbleColor="@color/purple_700"
        app:ccpDialog_fastScroller_handleColor="@color/purple_700"
        app:ccpDialog_initialScrollToSelection="true"
        app:ccpDialog_keyboardAutoPopup="false"
        app:ccpDialog_showCloseIcon="true"
        app:ccpDialog_showFastScroller="false"
        app:ccpDialog_showPhoneCode="true"
        app:ccpDialog_backgroundColor="@color/white"
        app:ccp_contentColor="@color/white"
        app:ccpDialog_showTitle="false"
        app:ccp_arrowColor="@color/purple_700"
        app:ccp_autoDetectCountry="true"
        app:ccp_autoDetectLanguage="false"
        app:ccp_autoFormatNumber="false"
        app:ccp_clickable="true"
        app:ccp_hintExampleNumber="true"
        app:ccp_rememberLastSelection="true"
        app:ccp_selectionMemoryTag="signupCCP"
        app:ccp_showArrow="true"
        app:ccp_showFlag="true"
        app:ccp_showFullName="false"
        android:layout_marginEnd="5dp"
        app:ccp_showNameCode="false"
        app:ccp_showPhoneCode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:ccp_textGravity="RIGHT"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/iv_image"
        android:src="@drawable/ic_person_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:id="@+id/tv_number"/>
        <EditText
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/ccp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:visibility="gone"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textColorLink="@color/white"
            android:id="@+id/phone"
            android:layout_marginTop="30dp"/>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="30dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="30dp"
            android:padding="5dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>